{{ 'hero.css' | asset_url | stylesheet_tag }}
{% comment %} {{ 'section-hero.css' | asset_url | stylesheet_tag }} {% endcomment %}
<div class="container">
  <div class="hero-content">
    {%- if section.settings.title != blank -%}
      <h1 class="h1--decor2">{{- section.settings.title -}}</h1>
    {%- endif -%}
    {%- if section.settings.text != blank -%}
      <p class="hero__text">{{- section.settings.text -}}</p>
    {%- endif -%}
    {%- if section.settings.textBtn != blank or section.settings.url != blank -%}
      <a href="{{- section.settings.url -}}" class="btn">
        {{- section.settings.textBtn -}}
      </a>
    {%- endif -%}
  </div>
  <div class="hero-video">
    <video id="heroVideo" loop="loop" autoplay loop muted="muted" playsinline>
      <source src="{{ section.settings.video }}">
    </video>
  </div>
</div>

<img
  src="https://cdn.shopify.com/s/files/1/0597/1551/8645/files/paw.png?v=1682359959"
  alt=""
  class="hero__decor1"
>
<img
  src="https://cdn.shopify.com/s/files/1/0597/1551/8645/files/g11.png?v=1687976032"
  alt=""
  class="hero__decor2"
>
<img
  src="https://cdn.shopify.com/s/files/1/0597/1551/8645/files/g11.png?v=1687976032"
  alt=""
  class="hero__decor3"
>
<img
  src="https://cdn.shopify.com/s/files/1/0597/1551/8645/files/g11.png?v=1687976032"
  alt=""
  class="hero__decor4"
>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('heroVideo')
    video.play()
  })
</script>
{% schema %}
{
  "name": "Home Banner",
  "class": "hero",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Image"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "html",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "textBtn",
      "label": "Text Button"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Link Button"
    },
    {
      "type": "url",
      "id": "video",
      "label": "Video Link"
    }
  ],
  "presets": [
    {
      "name": "Home Banner",
      "category": "Custom Section"
    }
  ]
}
{% endschema %}

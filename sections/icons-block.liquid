{{ 'icons-block.css' | asset_url | stylesheet_tag }}

<div class="t4s-container {{section.settings.class}}">
  {%- if section.settings.title -%}
    <h2 class="h1--decor2 icons-block__title">{{ section.settings.title }}</h2>
  {%- endif -%}
  <div class="icons-block__wrp">
    {%- for block in section.blocks -%}
      {% if block.settings.url != blank %}
        <a href="{{block.settings.url}}" {% if block.settings.new %}target="_blank"{% endif %} class="icons-block-item">
        {% else %}
        <div class="icons-block-item"> 
      {% endif %}
      
        {%- if block.settings.img != blank -%}
          <img src="{{block.settings.img | img_url: 'master'}}" alt="" class="icons-block-item__img">
        {%- endif -%}
        {%- if block.settings.text != blank -%}
          <p class="icons-block__text">{{ block.settings.text }}</p>
        {%- endif -%}
        {% if block.settings.url != blank %}
        </a>  
          {% else %}
        </div>
        {% endif %}
      
      
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Icons Block",
  "class": "icons-block",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "class",
      "label": "custom class"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Img"
        },
        {
          "type": "liquid",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "new",
          "label": "Open new window"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons Block"
    }
  ]
}
{% endschema %}

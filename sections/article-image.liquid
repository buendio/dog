{{ 'article.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign image = article.image
-%}
{% if image == blank %}{% continue %}{% endif -%}
<div class="t4s-container t4s-pr" style="margin-left:auto;margin-right:auto;">
  <img
    class="lazyloadt4s article-img__img"
    data-src="{{ image | image_url: width: 1 }}"
    data-widths="[100,200,400,600,700,800,900,1000,1200,1400,1600]"
    data-optimumx="2"
    data-sizes="auto"
    src="{% render 'img_svg',w:image.width,h:image.height %}"
    width="{{ image.width }}"
    height="{{ image.height }}"
    alt="{{ image.alt | escape }}"
  >
  <span class="lazyloadt4s-loader is-bg-img" style="background: url({{image | image_url: width: 1}});"></span>
</div>

{% schema %}
{
  "name": "Article Image",
  "class": "article-img",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "Article Image"
    }
  ]
}
{% endschema %}

{{ 'header.css' | asset_url | stylesheet_tag }}
{% assign menu = linklists[section.settings.menu] %}
{% assign menuCollection = linklists[section.settings.menu2] %}

<div class="container">
    <div class="d-flex align-items-center">
        <button class="menu-btn">
            {% render 'menuButton' %}
        </button>
        {%- if menuCollection != blank -%}
        <ul class="collection-menu d-none d-lg-flex">
            {%- for link in menuCollection.links -%}
                <li class="collectiom-menu__item">
                    <a href="{{ link.url }}" class="collectiom-menu__link">{{ link.title }}</a>
                    {%- if link.links != blank -%}{% render 'icon-caretDown' %}{%- endif -%}
                    {%- if link.links != blank -%}
                        <ul class="collectiom-menu__hide">
                            {%- for childlink in link.links -%}
                                <li><a href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
                            {%- endfor -%}
                        </ul>
                    {%- endif -%}

                </li>
            {%- endfor -%}
        </ul>
        {%- endif -%}
        <div class="header-icons">
            {%- comment -%}
            <button class="search">
                {% render 'icon-search' %}
            </button>
            {%- endcomment -%}

            <a class="t4s-pr searchLink" href="{{ routes.search_url }}" data-drawer-delay data-drawer-options='{ "id":"#t4s-search-hidden" }'>
                {% render 'icon-search' %}
            </a>
            <a href="{{ routes.account_url }}" class="header__account" {% unless customer or settings.login_side == false %} data-drawer-options='{ "id":"#t4s-login-sidebar" }' {% endunless %}>
                {% render 'icon-acount' %}
                {%- if show_txt -%}<span class="t4s-toolbar-label">{{bk_stts.title}}</span>{%- endif -%}
            </a>

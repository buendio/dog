{{ 'section.css' | asset_url | stylesheet_tag }}
{{ 'page-image.css' | asset_url | stylesheet_tag }}
<div class="container">
    {%- if  section.blocks.size > 0 -%}
    <div class="row">
        {%- for block in section.blocks -%}
        <div class="page-image-block col-md-3">
            {%- if block.settings.img != blank -%}
                <img src="{{- block.settings.img | img_url: 'master' -}}" alt="" loading="lazy">
            {%- endif -%}
            {%- if block.settings.text != blank -%}
                <a href="{{- block.settings.url -}}">{{- block.settings.text -}}</a>
            {%- endif -%}
        </div>
        {%- endfor -%}
    </div>
    {%- endif -%}
    {%- if section.settings.url != blank -%}
        <a class="page-image__link btn" href="{{- section.settings.url -}}">{{- section.settings.btnText -}}</a>
    {%- endif -%}
</div>
{% schema %}
    {
        "name": "Page Image",
        "class": "page-image",
        "tag": "section",
        "settings": [
            {
                "type": "text",
                "id": "btnText",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "url",
                "label": "Button Link"
            }

        ],
        "blocks": [
        {
                "type": "item",
                "name": "Image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "img",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text Link",
                        "default": "Link"
                    },
                    {
                        "type": "url",
                        "id": "url",
                        "label": "URL Link"
                    }
                ]
            }
        ]
    }
{% endschema %}